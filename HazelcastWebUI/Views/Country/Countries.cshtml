@model IEnumerable<Model.Country>
@{
    ViewData["Title"] = "Areas";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Country</th>
            <th scope="col">Dialing Code</th>
            <th scope="col">Prime Minister</th>
            <th scope="col">Currency</th>
            <th scope="col">Population</th>
            <th scope="col">Official Language</th>

        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@item.CountryName</td>
                <td>@item.DialingCode</td>
                <td>@item.PrimeMinister</td>
                <td>@item.Currency</td>
                <td>@item.Population</td>
                <td>@item.OfficialLanguage</td>
            </tr>
            i++;
        }
    </tbody>
</table>